<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hellogoodbyebackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="84dp"
        android:text="Hello"
        android:textColor="#ab47bc"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="387dp"
        android:layout_height="360dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_1"
        app:srcCompat="@drawable/hghello" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/hellogoodbyebutton"
        android:onClick="b1Clicked"
        android:text="Click ME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="400dp"
        android:layout_height="374dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="48dp"
        android:alpha="0.65"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hggoodbye" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="206dp"
        android:layout_height="71dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="44dp"
        android:text="GoodBye"
        android:textColor="#ab47bc"
        android:textSize="50sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/iv_1"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>